<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1>New Family</h1>
        </div>
        <div class="card-body">
          <%= simple_form_for(@family) do |f| %>
            <div class="mb-3">
              <%= f.input :name, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.input :email, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :guests, "Guests", class: "form-label" %>
              <%= f.abyme_for :guests %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "Create Family", class: "btn btn-outline-warning btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
