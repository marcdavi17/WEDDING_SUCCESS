<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "All tables", wedding_desks_path(@wedding), class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "Seating tables", sitting_plan_wedding_path(@wedding), class: "nav-link" %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container m-3">

  <h1>All my tables</h1>

<div class="desk-grid">
  <% @desks.each do |desk| %>
    <div class="desk-card">
      <div class="desk-card-left">
        <h3><%= desk.name %></h3>
        <div class="desk-feature">
          <%= image_tag "table.svg" %>
          <p> seats (<%= desk.shape %>)</p>
        </div>
        <div class="desk-feature">
          <%= image_tag "groupe.svg" %>
          <p> Capacity: <%= desk.capacity %></p>
        </div>
      </div>
      <div class="desk-card-right">
        <div class="desk-gauge-container">
          <div class="desk-gauge">
            <div class="desk-gauge-item"></div>
            <div class="desk-gauge-item"></div>
            <div class="desk-gauge-item"></div>
            <div class="desk-gauge-item"></div>
            <div class="desk-gauge-item"></div>
            <div class="desk-gauge-item"></div>
          </div>
          <p class="desk-gauge-info">3 seats left</p>
        </div>
        <div class="desk-cta">
        <%= link_to "See guests list", edit_wedding_desk_path(@wedding, desk) %>
          <%= image_tag "arrow.svg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<button type="button" class="btn btn-info"><%= link_to "Add a table", new_wedding_desk_path(@wedding) %></button>

</div>
