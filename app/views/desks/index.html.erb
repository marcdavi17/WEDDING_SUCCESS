<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" <%= link_to "All tables", wedding_desks_path(@wedding) %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" <%= link_to "Seating tables", sitting_plan_wedding_path(@wedding) %></a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container m-3">

  <h1>All my tables</h1>

  <% @desks.each do |desk| %>
    <div class="card m-3">
      <div class="card-header">
        <%= desk.name %>
      </div>
      <div class="card-body">
        <h5 class="card-title">Capacity: <%= desk.capacity %> seats (<%= desk.shape %>)</h5>
        <p class="card-text">Guest list of this table:</p>
          <ul>
            <% desk.guest_desks.each do |guest_desk| %>
              <li><%= guest_desk.guest.first_name %> <%= guest_desk.guest.last_name %></li>
            <% end %>
          </ul>
        <button type="button" class="btn-1 btn-light"><%= link_to "Edit table", edit_wedding_desk_path(@wedding, desk) %></button>
      </div>
    </div>
  <% end %>

<button type="button" class="btn-2 btn-block"><%= link_to "Add a table", new_wedding_desk_path(@wedding) %></button>

</div>

