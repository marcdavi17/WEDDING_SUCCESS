<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "All guests by groups", wedding_families_path(@wedding), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "All guests by persons", wedding_guests_path(@wedding), class: "nav-link active" %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">

  <div class="d-flex justify-content-between">
    <h1>All guests by persons</h1>
    <h3>Total: <span class="badge bg-primary"><%= @guests.count %> persons</span></h3>
  </div>

  <div class="row">
  <% @guests.each do |guest| %>
    <div class="card growing p-0 m-3 col-3">
      <div class="card-header">
        <%= guest.first_name %> <%= guest.last_name %>
      </div>
      <div class="card-body">
        <h5 class="card-title mb-3"><%= guest.family.name %></h5>
        <blockquote class="blockquote mb-0">
          <footer class="blockquote-footer">Invited by: <cite title="Source Title"><%= guest.spouse.first_name %> <%= guest.spouse.last_name %></cite></footer>
        </blockquote>
      </div>
    </div>
  <% end %>
  </div>
</div>
